@model SEELahore2k18.Models.CompetitionRegistration

@{
    ViewBag.Title = "Details";
}



<div  style="border:double">
    <h4 style="padding:10px">Competition Registration</h4>
    <hr />
    <div class="row" style="padding:20px">
        <div class="col-md-6"><dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd></div>

        <div class="col-md-6"><dt>
            @Html.DisplayNameFor(model => model.ContactNo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactNo)
        </dd></div>

 

        <div class="col-md-6"><dt>
            @Html.DisplayNameFor(model => model.EmailId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailId)
        </dd></div>

        <div class="col-md-6"><dt>
            @Html.DisplayNameFor(model => model.CNIC)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CNIC)
        </dd></div>

        <div class="col-md-6"><dt>
            @Html.DisplayNameFor(model => model.Institute.Institute1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Institute.Institute1)
        </dd></div>

        <div class="col-md-6"><dt>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd></div>

        <div class="col-md-6"><dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @{ 
                var address = Model.Address.Split(new string[] {"!Drama!"}, StringSplitOptions.None);
            }
            @address[0]
        </dd></div>
        <div class="col-md-6"><dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd></div>

        <div class="col-md-6"><dt>
            @Html.DisplayNameFor(model => model.Competition.CompetitionName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Competition.CompetitionName)
        </dd></div>

        <div class="col-md-6"><dt>
            @Html.DisplayNameFor(model => model.RequestStatu.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RequestStatu.Status)
        </dd></div>
                
        @if (address.Count() > 1)
        {
            <div class="col-md-6">
                <dt>
                    Drama Competition Details
                </dt>

                <dd>
                    @{
                        var dramaDetails = address[1].Split(new string[] { "|| " }, StringSplitOptions.None);
                    }
                    <b>Team Lead: </b>          @dramaDetails[1]<br />
                    <b>Total Members: </b>      @dramaDetails[2]<br />
                    <b>Play Description: </b>@dramaDetails[3]<br />
                </dd>
            </div>
        }


    </div>
</div>
    <p style="text-align:center">
        @Html.ActionLink("Back to List", "Index", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-sm btn-info" })
        @*@Html.ActionLink("Approve", "UpdateStatus", new { id = Model.Id, status = 2 }, htmlAttributes: new { @class = "btn btn-sm btn-primary" })
        @Html.ActionLink("Decline", "UpdateStatus", new { id = Model.Id, status = 3 }, htmlAttributes: new { @class = "btn btn-sm btn-danger" })*@

        <a href="/StallRequests/CompetitionRegistrations?id=@Model.Id&status=2" class="btn btn-sm btn-primary">Approve</a>
        <a href="/StallRequests/CompetitionRegistrations?id=@Model.Id&status=3" class="btn btn-sm btn-danger">Decline</a>
    </p>
