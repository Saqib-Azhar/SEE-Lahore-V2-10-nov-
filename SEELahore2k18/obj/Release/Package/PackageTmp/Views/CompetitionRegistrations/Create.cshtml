<script>
    function CheckCompetition()
    {
        var competitionId = $("#CompetitionId").val();
        if(competitionId == 2)
        {
            $(".HiddenDiv").removeProp("hidden");
            $("#DramaRulesShowButton").removeClass("hidden");
            $("#SubmitForm").addClass("hidden")
            $("#DramaTotalTeamMembers").prop("required", true);
            $("#DramaDescription").prop("required", true);
            $("#DramaTeamLeader").prop("required", true);
        }
        else
        {
            $(".HiddenDiv").prop("hidden",true)
            $("#DramaTotalTeamMembers").removeProp("required");
            $("#DramaDescription").removeProp("required");
            $("#DramaTeamLeader").removeProp("required");
            $("#DramaRulesShowButton").addClass("hidden");
            $("#SubmitForm").removeClass("hidden")

        }
    }

    function RulesAccepted()
    {
        $("#DramaRulesShowButton").addClass("hidden");
        $("#SubmitForm").removeClass("hidden")
    }
</script>